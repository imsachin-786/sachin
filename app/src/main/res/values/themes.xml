<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReservationSystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="OptionTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#DFDFDF
        </item>
    </style>


    <style name="textBack" parent="TextAppearance.AppCompat">
        <item name="android:background">#BF000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">#FFFFFF</item>



    </style>

    <style name="back" parent="Theme.AppCompat">
        <item name="android:background">#0000FF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">40dp</item>
        <item name="android:padding">14dp</item>
    </style>

</resources>